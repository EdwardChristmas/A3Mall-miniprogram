.cart-bottom {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0px;
  left: 0;
  border-top: 2rpx solid #eee;
  background-color: #fff;
}

.cart-bottom .check-box {
  float: left;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 45rpx;
}

.cart-bottom .btn-delete{
  float: left;
  float: left;
  height: 100rpx;
  line-height: 110rpx;
  padding-left: 10rpx;
  font-size: 32rpx;
  color: #333;
}

.cart-bottom .cart-bottom-text {
  padding-right: 240rpx;
  color: #323233;
  text-align: right;
  font-size: 24rpx;
  float: right;
  height: 100rpx;
  line-height: 100rpx;
}

.cart-bottom .cart-bottom-text view {
  display: inline-block;
}

.cart-bottom .cart-bottom-text view:last-child {
  color: #ee0a24;
}

.cart-bottom .cart-bottom-text view:last-child text {
  color: #ee0a24;
}

.cart-bottom .cart-bottom-text view:last-child text:last-child {
  font-size: 34rpx;
  padding-left: 5rpx;
}

.cart-bottom .btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  border: none;
  position: absolute;
  display: inline-block;
  margin: 0;
  padding: 0;
  font-size: 30rpx;
  text-align: center;
  border-radius: 50rpx;
  cursor: pointer;
  transition: opacity .2s;
  top: 10rpx;
  right: 20rpx;
  color: #fff;
  background-color: #ee0a24;
  background: linear-gradient(90deg, #ff6034, #ee0a24);
}

.wrap {
  width: 100%;
  background: #fafafa;
}

.list-box {
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  background: #fafafa;
}

.list-box .list-item {
  width: 88%;
  height: 160rpx;
  margin: 0 auto;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  padding: 20rpx 20rpx;
}

.list-box .list-item:first-child {
  margin-top: 20rpx;
}

.list-box .list-item .item-check {
  float: left;
  width: 7%;
  height: 100%;
  position: relative;
  margin-top: 60rpx;
}

.list-box .list-item .pic {
  float: left;
  width: 20%;
}

.list-box .list-item .pic image {
  width: 160rpx;
  height: 160rpx;
}

.list-box .list-item .goods {
  float: right;
  width: 68%;
  font-size: 28rpx;
  color: #333;
}

.list-box .list-item .goods .t {
  width: 100%;
  height: 80rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.list-box .list-item .goods .m {
  color: #666;
  font-size: 24rpx;
}

.list-box .list-item .goods .b {
  height: 60rpx;
}

.list-box .list-item .goods .b view:first-child {
  float: left;
  line-height: 60rpx;
  color: red;
}

.list-box .list-item .goods .b view:last-child {
  float: right;
}
