.list-wrap {
  margin-top: 20rpx;
}

.list-box {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.list-box .list-item-box {
  width: 95%;
  margin: 20rpx 2.5%;
  background-color: #fff;
  border-radius: 12rpx;
}

.list-box .list-item-box .top {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  border-bottom: 2rpx solid #eee;
}

.list-box .list-item-box .top .order-type {
  font-size: 28rpx;
  margin-right: 10rpx;
  color: #666;
}

.list-box .list-item-box .top text:first-child {
  float: left;
  padding-left: 20rpx;
}

.list-box .list-item-box .top text:last-child {
  font-size: 28rpx;
  float: right;
  padding-right: 20rpx;
}

.list-box .list-item-box .goods-box {
  padding: 0 20rpx;
}

.list-box .list-item-box .goods-box .goods-item {
  padding-top: 20rpx;
}

.list-box .list-item-box .goods-box .goods-item .goods-img {
  width: 154rpx;
  height: 154rpx;
  display: inline-block;
  float: left;
}

.list-box .list-item-box .goods-box .goods-item .goods-img image {
  width: 100%;
  height: 100%;
}

.list-box .list-item-box .goods-box .goods-item .goods-info {
  display: inline-block;
  width: 72%;
  font-size: 28rpx;
  float: right;
}

.list-box .list-item-box .goods-box .goods-item .goods-info .t {
  width: 100%;
  height: 90rpx;
}

.list-box .list-item-box .goods-box .goods-item .goods-info .t text:first-child {
  float: left;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  width: 70%;
}

.list-box .list-item-box .goods-box .goods-item .goods-info .t text:last-child {
  width: 30%;
  float: right;
  text-align: right;
}

.list-box .list-item-box .goods-box .goods-item .goods-info .b {
  width: 100%;
  height: 80rpx;
  font-size: 26rpx;
}

.list-box .list-item-box .goods-box .goods-item .goods-info .b text:first-child {
  float: left;
  color: #999;
}

.list-box .list-item-box .goods-box .goods-item .goods-info .b text:last-child {
  float: right;
  color: #666;
}

.list-box .list-item-box .order {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 2rpx solid #eee;
}

.list-box .list-item-box .order .total {
  height: 90rpx;
  line-height: 90rpx;
  text-align: right;
  font-size: 28rpx;
  padding-right: 20rpx;
}

.list-box .list-item-box .order .total view {
  display: inline-block;
  color: red;
}

.list-box .list-item-box .order .total view text {
  font-style: normal;
  font-size: 32rpx;
}

.list-box .list-item-box .botttom {
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  text-align: right;
}

.list-box .list-item-box .botttom text {
  font-size: 28rpx;
  text-align: center;
  border-radius: 30rpx;
  background-color: #fff;
  padding: 16rpx 30rpx;
  margin-right: 20rpx;
}

.list-box .list-item-box .botttom text.cancel {
  color: #333;
  border: 2rpx solid #ddd;
}

.list-box .list-item-box .botttom text.pay {
  background-color: #e93323;
  color: #fff;
}