.collect{
	width: 100%;
	height: 100vh;
	background-color: #fff;
}
.collect-list .item-box {
    float: left;
    padding: 0 32rpx;
    margin-top: 40rpx;
    border-radius: 20rpx;
    height: 260rpx;
}
.collect-list .item-box .l {
  width: 320rpx;
  position: absolute;
}
.collect-list .item-box .l .item-check {
      float: left; width: 60rpx; height: 260rpx;
      position: relative;
}
.collect-list .item-box .l .item-check .c-check { border-radius: 50%; position: absolute; top: 50%; transform: translateY(-50%); }
.collect-list .item-box .l .item-image image { width: 260rpx; height: 260rpx; }
.collect-list .item-box .r {
  padding-left: 340rpx;
  color: #888; font-size: 28rpx;
}
.collect-list .item-box .r .title {
  display: -webkit-box;overflow: hidden;-webkit-line-clamp: 2;-webkit-box-orient: vertical;
}
.collect-list .item-box .r .price{
    padding-top: 20rpx;
    font-size: 34rpx; color: #b91922;
}

.operation-placeholder { width: 100%; height: 100rpx; }
.operation {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #b91922;
}
.operation text {
  float: right;
  padding-right: 50rpx;
  font-size: 36rpx;
  color: #fff;
}