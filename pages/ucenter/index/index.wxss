.header{
  width: 100%;
  height: 510rpx;
  position: relative;
}

.header .info{
  width: 90%;
  position: absolute;
  top: 70rpx;
  left: 40rpx;
}
.header .info view {
  float: left;
  overflow: hidden;
  border-radius: 50%;
  width: 140rpx; height: 140rpx;
}
.header .info view image { width: 140rpx; height: 140rpx; display: block;  }
.header .info view open-data { width: 140rpx; height: 140rpx; display: block;  }
.header .info view:last-child {
    height: 140rpx; line-height: 140rpx; padding-left: 24rpx; font-size: 36rpx; color: #fff;
    width: 70%;
}
.header .amount{
  position: absolute;
  top: 230rpx;
  width: 100%;
}
.header .amount view {
  width: 50%; float: left;
}
.header .amount view text { display: block; color: #fff; text-align: center }
.header .amount view text:first-child { font-size: 34rpx; }
.header .amount view text:last-child { font-size: 26rpx; padding-top: 10rpx; }

.content {
  margin: -160rpx 40rpx 0 40rpx;
  position: relative;
}
.content .content-box{
  width: 100%;
  float: left;
  border-radius: 10rpx;
  background-color: #fff;
}
.content .content-box:last-child { margin-top: 30rpx; margin-bottom: 30rpx; }
.content .content-box .title{
  font-size: 32rpx;
  color: #666;
  width: 100%;
  float: left;
  border-bottom: 2rpx solid #ebebeb;
  height: 100rpx;
  line-height: 100rpx;
  text-indent: 30rpx;
}
.content .content-box .list-box{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}
.content .content-box .list-box .box{
  width: 20%;
  padding: 20rpx 0;
}
.content .content-box .list-box .box view {
  display: block; text-align: center; font-size: 26rpx; color: #666;
}
.content .content-box .list-box .box view:first-child {
  position: relative;
}
.content .content-box .list-box .box view:first-child .num {
  position: absolute;
  top: 10rpx;
  right: 38rpx;
  box-sizing: border-box;
  min-width: 32rpx;
  padding: 0 6rpx;
  color: #fff;
  font-weight: 500;
  font-size: 24rpx;
  line-height: 28rpx;
  text-align: center;
  background-color: #ee0a24;
  border: 1px solid #fff;
  border-radius: 32rpx;
  transform: translate(50%,-50%);
  transform-origin: 100%;
}
.content .content-box .list-box .box .ucenter-icon {
  font-size: 50rpx;
}
.content .content-box .service-box .box{
    width: 25%;
    padding: 20rpx 0;
}
.content .content-box .service-box .box view { display: block; text-align: center; font-size: 26rpx; color: #666; }
