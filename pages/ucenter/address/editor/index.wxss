.wrap{
  width: 100%;
  height: 100vh;
  background-color: #fff;
}

.theForm{
  width: 650rpx;
  padding-top: 50rpx;
  margin: 0 auto;
}
.theForm .fields-box{
  width: 100%;
  float: left;
  font-size: 31rpx;
  height: 110rpx;
  line-height: 110rpx;
  border: 2rpx solid #e0e0e0;
  border-left: 0;
  border-right: 0;
}
.theForm .fields-box:nth-child(1){
  border-top: 0;
  border-bottom: 0;
}
.theForm .fields-box:nth-child(2){
  border-bottom: 0;
}
.theForm .fields-box:nth-child(3){
  border-bottom: 0;
}
.theForm .fields-box view:first-child {
  float: left;
  width: 160rpx;
  color: #999;
}
.theForm .fields-box view:last-child {
  float: right;
  width: 490rpx;
  color: #333;
}
.theForm .fields-box view:last-child input {
  height: 110rpx;
  line-height: 110rpx;
}
.theForm .switch-box{
  background-color: #fff;
  width: 100%;
  float: left;
  font-size: 31rpx;
  height: 110rpx;
  line-height: 110rpx;
}
.theForm .switch-box view:first-child {
  float: left;
  color: #999;
}
.theForm .switch-box view:last-child {
  float: right;
}
.theForm .btn{
  float: left;
  margin: 25rpx 0;
}
.theForm .btn button {
  width: 650rpx;
  height: 100rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #b91922;
  border: 1px solid #b91922;
  color: #fff;
  font-size: 33rpx;
  border-radius: 10rpx;
}